@model IEnumerable<KurumsalWeb.Models.Model.Faculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Fakülte Yönetim Sayfası</h2>

<p>
    @Html.ActionLink("Yeni Fakülte Oluştur", "Create", null, new { @class = "btn btn-success" })
    
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FacultyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FacultyAddress)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.FacultyCreationDate)
        </th>
        <th>
            İşlemler
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FacultyCreationDate)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id = item.FacultyID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Sil", "Delete", new { id = item.FacultyID }, new { @class = "btn btn-danger" })

        </td>
    </tr>
}

</table>
