@model KurumsalWeb.Models.Model.User
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2> Kullanıcı Ekle</h2>


<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Users/Create/" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kullanıcı İsmi <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UserName" name="UserName" minlength="1" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kullanıcı Soyadı <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UserSurname" name="UserSurname" minlength="1" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kullanıcı Şifre <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UserPassword" name="UserPassword" minlength="3" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kullanıcı Mail <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="UserMail" name="UserMail" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Fakülte İsmi <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("FacultyID", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Rol İsmi <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("RoleID", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-warning" type="button"><a href="/Users/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>
